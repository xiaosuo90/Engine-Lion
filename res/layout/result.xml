<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/titlebar"
        style="@style/titlebar_style"
        android:layout_marginTop="0dp" >

        <com.work.gongchenglion.util.BackButton
            android:id="@+id/back_btn"
            style="@style/back_btn_style" />

        <TextView
            android:id="@+id/result_title"
            style="@style/title_style"
            android:text="@string/result" />
    </RelativeLayout>

    <View style="@style/horizontal_line_style" />

    <HorizontalScrollView
        android:id="@+id/layout_node"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearlayout_head_node"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:background="#6DD9FC"
                android:gravity="center_vertical"
                android:orientation="horizontal" >                
            </LinearLayout>

            <ListView
                android:id="@+id/listview_node"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:cacheColorHint="#00000000"
                android:divider="@drawable/item_v_line"
                android:dividerHeight="1sp"
                android:paddingBottom="50dp" />            
        </LinearLayout>                
    </HorizontalScrollView>
    <HorizontalScrollView
        android:id="@+id/layout_pole"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="5dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearlayout_head_pole"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:background="#6DD9FC"
                android:gravity="center_vertical"
                android:orientation="horizontal" >                
            </LinearLayout>

            <ListView
                android:id="@+id/listview_pole"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:cacheColorHint="#00000000"
                android:divider="@drawable/item_v_line"
                android:dividerHeight="1sp"
                android:paddingBottom="50dp" />            
        </LinearLayout>                
    </HorizontalScrollView>

</LinearLayout>