<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="wrap_content_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_parent_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrap_match_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="back_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="titlebar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/titlebar_height</item>
        <item name="android:background">@color/titlebar_bg</item>
    </style>

    <style name="background_color_style">
        <item name="android:background">@color/titlebar_bg</item>
    </style>

    <style name="titlebar_menu_style">
        <item name="android:layout_width">@dimen/menu_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/menu_left</item>
        <item name="android:layout_marginRight">@dimen/menu_left</item>
    </style>

    <style name="title_style" parent="wrap_content_layout">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="setting_tv_style" parent="wrap_content_layout">
        <item name="android:textSize">@dimen/left_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="icon_right_icon_style" parent="wrap_content_layout">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="left_icon_style">
        <item name="android:layout_width">38dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="horizontal_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/horizontal_line_height</item>
        <item name="android:background">@drawable/horizontal_line</item>
    </style>

    <style name="tab_item_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="icon_tv_style" parent="wrap_content_layout">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/icon_tv_size</item>
    </style>

    <style name="linear_item_style" parent="wrap_match_layout">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:background">@drawable/linear_item_bg</item>
    </style>

    <style name="linear_icon_style" parent="wrap_content_layout">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="linear_lefttv_style" parent="wrap_content_layout">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="linear_lefttv2_style" parent="wrap_content_layout">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="edit_text1_style">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="edit_text3_style">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="edit_text2_style">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="vertical_layout">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#59a2d1</item>
    </style>

</resources>